<rewrite>
  <rules>
    <rule name="Crawler static page" stopProcessing="true">
      <match url="^post/([_0-9a-z-]+)" />
      <conditions>
        <add input="{HTTP_USER_AGENT}" pattern="Facebot|facebookexternalhit/*|Twitterbot|Pinterest|Google.*snippet" />
      </conditions>
      <action type="Rewrite" url="/metadata/{R:1}" appendQueryString="false" />
    </rule>
  </rules>
</rewrite>