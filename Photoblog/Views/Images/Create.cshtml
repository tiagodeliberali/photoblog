@model Photoblog.Model.Entities.Image

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Image</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="PostId" />

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Url" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="submit" name="submit" value="Upload File" class="btn btn-default">
            </div>
        </div>
    </div>
</form>

<div>
    <a href="/admin/Images/Index?postId=@(Model.PostId)">Back to List</a>
</div>

@section Scripts {
    <script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
    <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>

    <script>
        $(function () {
            // Configure Cloudinary
            // with credentials available on
            // your Cloudinary account dashboard
            $.cloudinary.config({ cloud_name: 'drzxualok', api_key: '468641338473984' });

            // Upload button
            var uploadButton = $('#submit');
            var urlText = $('#Url');

            // Upload button event
            uploadButton.on('click', function (e) {
                // Initiate upload
                cloudinary.openUploadWidget({ cloud_name: 'drzxualok', upload_preset: 'tiagophotoblog', tags: ['tiagophotoblog'] },
                    function (error, result) {
                        if (error) {
                            console.log(error);
                        }

                        var id = result[0].public_id;
                        console.log(processImage(id));
                        urlText.val(id);
                    });
            });
        })

        function processImage(id) {
            var options = {
                client_hints: true,
            };
            return '<img src="' + $.cloudinary.url(id, options) + '" style="width: 100%; height: auto"/>';
        }
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
